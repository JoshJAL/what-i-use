---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Body from '../components/Body.astro';
import Content from '../components/content/Content.astro';
type Props = CollectionEntry<'posts'>['data'];
const { title, description, heroImage } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <Body>
    <Header />
    <main class='pt-[60px]'>
      <Content className={'pt-6'}>
        <div class='mb-8'>
          {
            heroImage && (
              <img
                class='border border-slate-300 dark:border-zinc-700 rounded-xl'
                width={720}
                height={360}
                src={heroImage}
                alt=''
              />
            )
          }
        </div>
        <h1 class='text-3xl my-1 font-mplus'>{title}</h1>
        <div>{description}</div>
        <hr class='border-top border-zinc-400 my-4' />
        <slot />
        <span
          class='underline underline-offset-2 hover:text-orange-500 decoration-orange-500 dark:hover:text-teal-500 dark:decoration-teal-500'
        >
        </span>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
